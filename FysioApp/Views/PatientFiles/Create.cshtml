@model FysioApp.Models.ViewModels.PatientFileViewModels.CreatePatientFileViewModel
@using FysioApp.Extensions
@using FysioApp.Utility
@using System.Security.Claims;
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create" method="post" class="card">
    <div class="card-header">
        <h2>Nieuw Dossier</h2>
    </div>
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="PatientFile.PatientId"></label>
                    </div>
                    <div class="col-md-8">
                        <select asp-for="PatientFile.PatientId" class="form-control" asp-items="Model.Patients.ToSelectListItem(Model.PatientFile.PatientId)"></select>
                        <span asp-validation-for="PatientFile.PatientId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="PatientFile.ComplaintsDescription"></label>
                    </div>
                    <div class="col-md-8">
                        <textarea asp-for="PatientFile.ComplaintsDescription" class="form-control" style="height:150px;"></textarea>
                        <span asp-validation-for="PatientFile.ComplaintsDescription" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="PatientFile.DateOfArrival"></label>
                    </div>
                    <div class="col-md-8">
                        <input type="date" asp-for="PatientFile.DateOfArrival" class="form-control" />
                        <span asp-validation-for="PatientFile.DateOfArrival" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="PatientFile.HeadPractitionerId"></label>
                    </div>
                    <div class="col-md-8">
                        <select asp-for="PatientFile.HeadPractitionerId" class="form-control" asp-items="Model.Students.ToSelectListItem(Model.PatientFile.HeadPractitionerId)"></select>
                        <span asp-validation-for="PatientFile.HeadPractitionerId" class="text-danger"></span>
                    </div>
                </div>
                @{
                    var claimsIdentity = (ClaimsIdentity)this.User.Identity;
                    var userId = claimsIdentity.FindFirst(ClaimTypes.NameIdentifier).Value;
                }
                @if (User.IsInRole(StaticDetails.TeacherEndUser))
                {
                    <input hidden asp-for="PatientFile.IntakeSupervisedById" value="@userId" />
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label asp-for="PatientFile.IntakeDoneById"></label>
                        </div>
                        <div class="col-md-8">
                            <select asp-for="PatientFile.IntakeDoneById" class="form-control" asp-items="Model.Students.ToSelectListItem(Model.PatientFile.IntakeDoneById)"></select>
                            <span asp-validation-for="PatientFile.IntakeDoneById" class="text-danger"></span>
                        </div>
                    </div>
                }
                @if (User.IsInRole(StaticDetails.StudentEndUser))
                {
                    <input hidden asp-for="PatientFile.IntakeDoneById" value="@userId" />
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label asp-for="PatientFile.IntakeSupervisedById"></label>
                        </div>
                        <div class="col-md-8">
                            <select asp-for="PatientFile.IntakeSupervisedById" class="form-control" asp-items="Model.Teachers.ToSelectListItem(Model.PatientFile.IntakeSupervisedById)"></select>
                            <span asp-validation-for="PatientFile.IntakeSupervisedById" class="text-danger"></span>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="btn-group">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a class="btn btn-success" asp-action="Index">Back to List</a>
        </div>
    </div>
</form>

