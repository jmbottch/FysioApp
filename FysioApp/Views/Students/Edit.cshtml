@model ApplicationCore.Entities.ApplicationUsers.Student

@{
    ViewData["Title"] = "Create";
}


<form class="card" method="post" asp-action="Edit">
    <div class="card-header">
        <h2>
            Gegeven Student Bewerken
        </h2>
    </div>

    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Email" class="form-label"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="FirstName" class="form-label"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="LastName" class="form-label"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="LastName" class="form-control" />
                    </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="PhoneNumber" class="form-control" />
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="StudentNumber" class="form-label"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="StudentNumber" class="form-control" />
                    </div>
                    <span asp-validation-for="StudentNumber" class="text-danger"></span>
                </div>                
            </div>
        </div>

    </div>
    <div class="card-footer">
        <div class="btn-group">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-success">Back To List</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}